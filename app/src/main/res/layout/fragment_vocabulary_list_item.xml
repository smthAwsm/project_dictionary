<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="@dimen/medium_text_size"
        android:id="@+id/dictionaryNameText"
        android:layout_marginLeft="@dimen/list_item_margin"
        android:layout_marginTop="@dimen/list_item_margin"
        android:layout_marginBottom="@dimen/activity_margin_half"
        android:layout_marginRight="@dimen/activity_margin_half"
        android:layout_toLeftOf="@+id/languageFromImageView"
        android:layout_toStartOf="@+id/languageFromImageView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/topics"
        android:id="@+id/numberTopicsText"
        android:textSize="@dimen/medium_text_size"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_below="@+id/dictionaryNameText"
        android:layout_alignLeft="@+id/dictionaryNameText"
        android:layout_alignStart="@+id/dictionaryNameText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dateText"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="@dimen/small_text_size"
        android:layout_marginTop="@dimen/activity_margin_half"
        android:layout_marginBottom="@dimen/activity_margin_half"
        android:layout_below="@+id/numberTopicsText"
        android:layout_alignLeft="@+id/numberTopicsText"
        android:layout_alignStart="@+id/numberTopicsText"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:id="@+id/languageToImageView"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:id="@+id/imageView3"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/languageToImageView"
        app:srcCompat="@drawable/ic_trending_flat"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:id="@+id/languageFromImageView"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/imageView3"
        android:layout_toStartOf="@+id/imageView3"/>

</RelativeLayout>