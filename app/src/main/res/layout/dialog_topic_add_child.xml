<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="500dp"
    android:id="@+id/spinnerChild">

    <helpers.MeasurableGridView
    android:id="@+id/topicImagesGrid"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnWidth="@dimen/topic_icons_column_width"
    android:drawSelectorOnTop="true"
    android:gravity="center"
    android:numColumns="auto_fit"
    android:stretchMode="columnWidth"
    android:verticalSpacing="@dimen/grid_items_spacing"
    android:horizontalSpacing="@dimen/grid_items_spacing"
    android:focusable="true"
    android:clickable="true"/>
</LinearLayout>