<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/testing_level"
        android:layout_margin="24dp"
        android:id="@+id/dialogTestingTextView" />


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/testingLevelBeginer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        card_view:cardElevation="0dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        card_view:cardBackgroundColor="@color/background">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="24dp"
            android:src="@drawable/ic_stars_black_48dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/level_begin"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="100dp"
            android:textColor="@color/separator" />
        </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/testingLevelNormal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        card_view:cardElevation="0dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        card_view:cardBackgroundColor="@color/background">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="24dp"
            android:src="@drawable/ic_done_all_black_48dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/level_normal"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="100dp"
            android:textColor="@color/separator" />



    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/testingLevelAdvanced"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        card_view:cardElevation="0dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        card_view:cardBackgroundColor="@color/background">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="24dp"
            android:src="@drawable/ic_create_black_48dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/testing_advanced"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="100dp"
            android:textColor="@color/separator" />



    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="center"
        android:text="@string/no"
        android:id="@+id/closeTestDialog"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="right"
        android:textColor="@color/colorPrimaryDark" />


</LinearLayout>